<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Школьное расписание" Height="670" Width="470" ResizeMode="NoResize" SizeToContent="Manual">

    <Grid>
        <Grid>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,584">
                <TextBlock Text="СОЗДАНИЕ ТАБЛИЦЫ" FontSize="18"  TextAlignment="Center" FontWeight="DemiBold" />
            </Border>
            
        </Grid>
        <Grid Margin="0,72,0,0">
            <Border BorderBrush="Black" BorderThickness="2" Margin="0">
                <Grid>



                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <TextBlock Text="Добавление группы" TextAlignment="Center" FontWeight="DemiBold" Width="154"/>
                        <TextBlock Text="Название группы:" Width="154"/>
                        <TextBox Name="txtGroupName" Grid.Row="1" Width="154"/>

                        <TextBlock Text="Предметы:" Visibility="Hidden"/>

                        <Button x:Name="A_But" Content="Добавить группу" Click="AddGroup_Click" Grid.Row="2"  Width="154"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <TextBlock Text="Добавление студента" TextAlignment="Center" FontWeight="DemiBold" Width="154"/>
                        <TextBlock Text="ФИО студента:" Width="154"/>
                        <TextBox Name="txtGroupName1" Grid.Row="1" Width="154"/>
                        <TextBlock Text="Эл. почта студента:" Width="154"/>
                        <TextBox Name="txtGroupName2" Grid.Row="1" Width="154"/>
                        <TextBlock Text="Группа студента:" Width="154"/>

                        <ComboBox x:Name="comboS" Grid.Row="1" Width="154"/>
                        <TextBlock/>
                        <Button x:Name="Button" Content="Добавить студента" Click="AddStudent_Click" Grid.Row="2"  Width="154"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1">
                        <TextBlock Text="Добавление предмета" TextAlignment="Center" FontWeight="DemiBold" Width="154"/>
                        <TextBlock Text="Предмет:"  Width="154"/>
                        <TextBox Name="comboSubject" Width="154"/>
                        <TextBlock Text="Группы:"  Width="154"/>
                        <ScrollViewer Width="154">
                            <ListBox Name="List1" Width="154" Height="100"/>
                        </ScrollViewer>

                        <DockPanel Width="154">

                            <ComboBox Name="comboSubjects" Width="94"/>
                            <Button Content="Добавить" Click="B_Click"/>
                        </DockPanel>

                        <TextBlock Text="Кабинет:" Width="154"/>
                        <TextBox x:Name="txtFullNam" Width="154"/>
                        <TextBlock Text="Количество пар:" Width="154"/>
                        <TextBox x:Name="txtFullNam1" KeyDown="Text_KeyDown" Width="154"/>
                        <TextBlock Text="" Width="154"/>

                        <Button x:Name="A_Button" Content="Добавить предмет" Click="AddGroupSubject_Click"  Width="154"/>


                    </StackPanel>
                    <StackPanel  Orientation="Vertical" Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="Годы для расписания" TextAlignment="Center" FontWeight="DemiBold" Width="154"/>
                        <TextBlock Visibility="Hidden"/>
                        <DockPanel Grid.Row="1" Grid.Column="1" Width="154">
                            <TextBlock Text="Введите год начала: " Height="14"/>
                            <TextBox x:Name="txtFullName5" KeyDown="Text_KeyDown" Height="18"/>

                        </DockPanel>
                        <DockPanel Grid.Row="1" Grid.Column="1" Width="154">
                            <TextBlock Text="Введите год конца: " Height="14"/>
                            <TextBox x:Name="txtFullName1" KeyDown="Text_KeyDown" Height="18"/>

                        </DockPanel>
                        <TextBlock Visibility="Hidden"/>
                        <Button  Content="Создать" Click="A_Click"/>
                    </StackPanel>







                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>