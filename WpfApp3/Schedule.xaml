<Window x:Class="WpfApp3.Schedule"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Школьное расписание" Height="320" Width="430" ResizeMode="NoResize" SizeToContent="Manual">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" Grid.Row="0">
            <TextBlock Text="Поиск: " Height="23"/>
            <TextBox x:Name="search" Width="30"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button Content="Искать" Height="20" Click="Search_Click"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button Content="Вернуться" Height="20" Click="A_Click"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button Content="Пересоздать" Height="20" Click="S_Click"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <TextBlock x:Name="Text" Text="2024-2025" FontSize="10" Width="50"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,-274">
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="День недели" Width="1.5*" Binding="{Binding day}" />
                    <DataGridTextColumn Header="Номер урока" Width="1.5*" Binding="{Binding num}" />
                    <DataGridTextColumn Header="Название урока" Width="1.5*" Binding="{Binding lesson}" />
                    <DataGridTextColumn Header="Кабинет" Width="*" Binding="{Binding kab}" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Window>
