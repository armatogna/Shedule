<Window x:Class="WpfApp3.Schedule"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Школьное расписание" Height="320" Width="430" ResizeMode="NoResize" SizeToContent="Manual">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,10,10" Grid.Row="0">
            <TextBlock Text="Поиск: " Height="23" Visibility="Collapsed"/>
            <TextBox x:Name="search" Width="30" Visibility="Collapsed"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button Content="Искать" Height="20" Visibility="Collapsed"/>
            <TextBlock Text="В" Visibility="Collapsed"/>
            <Button Content="Вернуться" Height="20" Click="A_Click"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button Content="Пересоздать" Height="20" Click="S_Click"/>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button ToolTip="Напечатать таблицу" Click="Button_Click_1">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="2,0,2,0" Text="&#xE749;"/>
            </Button>
            <TextBlock Text="В" Visibility="Hidden"/>
            <Button ToolTip="Переслать таблицу" Visibility="Collapsed" Click="Button_Click_2">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="2,0,2,0" Text="&#xE715;"/>
            </Button>
            <TextBlock Text="В" Visibility="Collapsed"/>
            <Button ToolTip="Сохранить таблицу" Click="Button_Click_3">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="2,0,2,0" Text="&#xE74E;"/>
            </Button>
            <TextBlock Text="В" Visibility="Hidden"/>
            <TextBlock x:Name="Text" Background="White" Text="2025-2026" FontSize="10" Width="50"/>
        </StackPanel>
        <TabControl Grid.Row="1" Margin="0,0,0,-264" Grid.RowSpan="2">
            <TabItem Header="Уроки">
                <ScrollViewer  HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="Stack" Orientation="Horizontal">
                        
                    
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Группы">
                <ScrollViewer >
                    <DataGrid x:Name="dataGrid3" AutoGenerateColumns="False" Height="226">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="30" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Название" Width="1.5*" Binding="{Binding Name}" />
                            
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Студенты">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Группа: " Margin="2"/>
                        <TextBox x:Name="Text1" Width="71" Margin="2"/>
                        <Button Content="Найти" Margin="2" Click="Button_Click"/>
                    </StackPanel>
                        

                        <ScrollViewer >
                    
                    <DataGrid x:Name="dataGrid2" AutoGenerateColumns="False" Height="207">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="30" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Название" Width="1.5*" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Название" Width="1.5*" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Название" Width="1.5*" Binding="{Binding Name}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
