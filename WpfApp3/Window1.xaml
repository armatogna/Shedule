<Window x:Class="WpfApp3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Расписание" Height="420" Width="500" ResizeMode="NoResize" SizeToContent="Manual">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="58"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="1">
            <DataGrid x:Name="dataGrid2" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="1*" Binding="{Binding id}" />
                    <DataGridTextColumn Header="Название" Width="3*" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Часы" Width="1*" Binding="{Binding Hours}" />
                    <DataGridTextColumn Header="Каб." Width="1*" Binding="{Binding Cabinet}" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <ScrollViewer>
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="1*" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Название" Width="5*" Binding="{Binding Name}" />

                </DataGrid.Columns>
            </DataGrid>

        </ScrollViewer>
        <StackPanel Margin="5,5,5,5" Grid.Row="1">
            <TextBlock Text="ID: "/>
            <TextBox x:Name="Text" Margin="2"/>
            <TextBlock Text="Название: "/>
            <TextBox x:Name="Tet1" Margin="2"/>
            <TextBlock Text="Название: " Visibility="Hidden"/>
            <Button Content="Изменить" Margin="2" Click="A_Click"/>
        </StackPanel>
        <StackPanel Margin="5,5,5,5" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="ID: "/>
            <TextBox x:Name="Text2" Margin="2"/>
            <TextBlock Text="Название: "/>
            <TextBox x:Name="Text3" Margin="2"/>
            <TextBlock Text="Часы: "/>
            <TextBox x:Name="Text4" Margin="2"/>
            <TextBlock Text="Кабинет: "/>
            <TextBox x:Name="Text5" Margin="2"/>
            <TextBlock Text="Название: " Visibility="Hidden"/>
            <Button Content="Изменить" Margin="2" Click="S_Click"/>
        </StackPanel>

        <Button Content="Вернуться" Margin="178,221,178,39" Click="Sd_Click" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2"/>
    </Grid>
</Window>
